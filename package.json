{
  "name": "quikspit-shine",
  "version": "1.0.0",
  "description": "A full-stack web application for QuickSpit Shine services",
  "private": true,
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "cd backend && npm run start:dev",
    "build": "npm run build:frontend && npm run build:backend",
    "build:frontend": "cd frontend && npm run build",
    "build:backend": "cd backend && npm run build",
  "serve:frontend": "cd frontend && npm run start",
  "serve:backend": "cd backend && npm run start:prod",
  "start:prod": "concurrently \"npm run serve:backend\" \"npm run serve:frontend\"",
  "prod": "npm run build && npm run start:prod",
    "install:all": "npm install && cd frontend && npm install && cd ../backend && npm install",
    "clean": "rm -rf node_modules frontend/node_modules backend/node_modules"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
