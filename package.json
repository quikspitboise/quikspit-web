{
  "name": "quikspit-auto-detailing",
  "version": "1.0.0",
  "description": "A full-stack web application for QuikSpit Auto Detailing services",
  "private": true,
  "scripts": {
    "dev": "concurrently \"pnpm dev:frontend\" \"pnpm dev:backend\"",
    "dev:frontend": "pnpm --filter frontend dev",
    "dev:backend": "pnpm --filter backend start:dev",
    "build": "pnpm build:frontend && pnpm build:backend",
    "build:frontend": "pnpm --filter frontend build",
    "build:backend": "pnpm --filter backend build",
    "serve:frontend": "pnpm --filter frontend start",
    "serve:backend": "pnpm --filter backend start:prod",
    "start:prod": "concurrently \"pnpm serve:backend\" \"pnpm serve:frontend\"",
    "prod": "pnpm build && pnpm start:prod",
    "install:all": "pnpm install",
    "clean": "rm -rf node_modules frontend/node_modules backend/node_modules"
  },
  "devDependencies": {
    "concurrently": "^9.2.1"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "packageManager": "pnpm@9.15.0",
  "dependencies": {
    "react-icons": "^5.5.0"
  }
  ,
  "pnpm": {
    "overrides": {
      "next": "^16.1.6",
      "react": "^19.2.4",
      "react-dom": "^19.2.4",
      "glob": "^10.5.0",
      "validator": "^13.15.22",
      "nodemailer": "^7.0.13"
    },
    "onlyBuiltDependencies": ["@nestjs/core", "sharp", "unrs-resolver"]
  }
}
